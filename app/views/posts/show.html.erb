<h4> Post title: <%= @post.title %> </h4>

url:
<%= @post.url %>

<p>
  <% render 'shared/error', obj: @comment %>
  <%= form_for [@post,@comment] do |f| %>
    <%= render "shared/error", obj: @comment %>
    <%= f.label :body %>
    <%= f.text_field :body %><br/>
    <%= f.submit "Create", class: 'btn btn-primary'%>
  <% end %>

  <h5>Comments</h5>
  <ol>
    <% @post.comments.each do |comment| %>
      <li><%= comment.body %></li>
    <% end %>
  </ol>
</p>